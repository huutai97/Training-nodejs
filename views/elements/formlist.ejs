      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title ">List items</h4>
                  <% include ./../helper/filter %>
                  <% filterstatusHelper(statusFilter) %>

                  <a class="btn btn-info" data-toggle="modal" data-target="#exampleModal" style="float:right">Add New Items</a>
                  

                </div>  
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table">
                      <thead class=" text-primary">
                        <th>
                          ID
                        </th>
                        <th>
                          Name
                        </th>
                        <th>
                          Ordering
                        </th>
                        <th>
                          Status
                        </th>
                        <th>
                          Action
                        </th>
                      </thead>
                      <tbody>
                        <% include ./../helper/status %>
                        <%   items.forEach((item,index)=>{%>
                          <tr>
                            <td>
                             <%= item._id %>
                            </td>
                            <td>
                              <%= item.name %>
                            </td>
                            <td>
                              <input type="number" value="<%= item.ordering %>" >
                              
                            </td>
                            <td>
                             <%-statusHelper('items', item.status, item.id) %>
                            </td>
                            <td class="text-primary">
                             <a href="<%= systemConfig.admin %>/items/delete/<%=item.slug%>" type="button" class="btn btn-danger">Delete</a>
                            
                             <a href="<%= systemConfig.admin %>/items/form/<%=item.slug%>" type="button" class="btn btn-info">Edit</a>
                             </a>
                            </td>
                          </tr>
                  <% })%> 
                      </tbody>
                    </table>
                  </div>
                </div>
                
                <% include ./../helper/pagination %>
                <%=paginationHelper(paginaTion, currentStatus, search) %>
               
              </div>
            </div>
          </div>
        </div>
      
      </div>

      <div class="container demo">
       
        <div class="modal left fade" id="exampleModal" tabindex="" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="nav flex-sm-column flex-row">
                          <form action="/erp/items/save" method="POST">
                            <label for="fname">First name:</label>
                            <input type="text" id="fname" name="name" value="<%=item.name  %>"><br><br>
                          
                            <label for="lname">Ordering:</label>
                            <input type="text" id="lname" name="ordering" value="<%=item.ordering  %>"><br><br>
                            <label for="slbox">Status</label>
                            <select name="status" >
                              <option value="novalue">Choose Status</option>
                              <option value="active"<%=(item.status == "active") ? 'selected="selected"' : '' %> >Active</option>
                              <option value="inactive" <%=(item.status == "inactive") ? 'selected="selected"' : '' %>>Inactive</option>
                            </select>
                            <input class="form-control" name="id" value="<%= item.Slug %>" type="hidden">
                            <button type="submit" class="btn btn-primary">Submit</button>
                          </form>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
                <% if(errorsSave){ %>
  
                  <% errorsSave.forEach((error)=>{ %>
                    <li> <%= error.param %>: <%= error.msg %></li>
                    <% })%>
                    <%}%>
                
            </div>
        </div>
    </div>