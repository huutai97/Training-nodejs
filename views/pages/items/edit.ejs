  <div class="container-fluid">
      <div class="row">
          <div class="col-md-6">
              <div class="form"style="float:right;height: 100%;">
                <form action="/erp/items/save" method="POST">
                  <label for="fname">First name:</label>
                  <input type="text" id="fname" name="name" value="<%=item.name  %>"><br><br>
                  <label for="fname">Slug:</label>
                  <input type="text" id="slug" name="slug" value="<%=item.slug  %>"><br><br>
